<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/RecipeCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llProductContainer">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:spinnerMode="dropdown"
            android:scrollbarSize="15dp"
            android:id="@+id/spinnerProduct"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/spinnerProduct"
            android:id="@+id/llProduct">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Producto"
                android:id="@+id/txtQuantity"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="Producto"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryTextBackgroun"
                android:id="@+id/txtMeasureSymbol"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnRemoveProduct"
                android:src="@drawable/ic_add"
                android:layout_weight="0.2"/>

        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>