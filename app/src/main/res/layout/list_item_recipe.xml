<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/RecipeCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:text="ProductId"
            android:src="@mipmap/image_cake_2"/>

        <TextView
            android:id="@+id/txtRecipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivRecipeImage"
            android:text="RecipeName"
            android:textSize="16dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorPrimaryTextBackgroun"/>
        <TextView
            android:id="@+id/txtProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textSize="15dp"
            android:padding="3dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtRecipeName"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/txtRecipeCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nah"
            android:textSize="15dp"
            android:padding="3dp"
            android:layout_below="@id/txtRecipeName"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>

