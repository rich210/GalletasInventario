<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/OrderCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5555"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryText"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/primary_round_corner"/>
        <TextView
            android:id="@+id/txtClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txtOrderNo"
            android:text="Nombre del Cliente"
            android:textSize="16dp"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/lineBackgroundState"
            android:layout_below="@id/txtClientName"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/txtRecipes"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Recetas"
            android:textSize="16dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="italic"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/lineBackgroundState"
            android:visibility="gone"
            android:background="@drawable/secundary_round_corner"/>
        <TextView
            android:id="@+id/txtDeliveryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de entrega"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtRecipes"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/ivOrderState"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:paddingTop="12dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="2dp"


            android:layout_below="@id/txtClientName"
            android:layout_alignEnd="@id/lineBackgroundState"
            android:layout_alignParentRight="true"/>

        <!--android:text="Estado de la orden"-->
        <!--android:textSize="15dp"-->
        <!--android:textAlignment="center"-->


    </RelativeLayout>
</android.support.v7.widget.CardView>

