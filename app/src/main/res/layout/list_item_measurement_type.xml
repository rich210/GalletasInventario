<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/MeasurementsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/itemListBackgroundPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_round_corner"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryText"
            android:text="3333"
            android:id="@+id/txtMeasurerTypeId"
            android:gravity="center"
            android:padding="15dp"/>

        <CheckedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la medida"
            android:id="@+id/txtMeasureTypeName"
            android:textSize="20dp"
            android:padding="15dp"
            android:layout_toRightOf="@id/txtMeasurerTypeId"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
