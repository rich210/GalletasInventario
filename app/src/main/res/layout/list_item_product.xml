<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/ProductCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/itemListBackgroundPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:card_view="http://schemas.android.com/tools">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_round_corner"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center"
                android:padding="15dp"
                android:text="4444" />

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtProductId"
                android:text="ProductName"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:padding="15dp"/>
            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="12dp"
                android:padding="3dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/txtProductName"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txtCostPerUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CostePerUnit"
                android:textSize="12dp"
                android:padding="3dp"
                android:layout_below="@id/txtProductName"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>
</android.support.v7.widget.CardView>
